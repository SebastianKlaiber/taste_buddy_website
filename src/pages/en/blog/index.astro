---
import Layout from "../../../layouts/Layout.astro";
import Main from "../../../components/Main.astro";
import { AstroSeo } from '@astrolib/seo';

// Get all blog posts
const posts = await Astro.glob('./posts/*.{md,mdx}');

// Sort posts by date
const sortedPosts = posts.sort((a, b) => {
  return new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime();
});

// Get current path for language switcher
const { pathname } = Astro.url;
const dePath = pathname.replace("/en/", "/de/");
---

<AstroSeo
  title="TasteBuddy Blog - Cooking Tips & Updates"
  description="Read the latest cooking tips, recipe organization strategies, and app updates from the TasteBuddy team."
  openGraph={{
    title: 'TasteBuddy Blog',
    description: 'Cooking tips, recipe organization strategies, and app updates from the TasteBuddy team.',
  }}
/>

<Layout title="TasteBuddy Blog">
  <Main>
    <!-- Language Switcher -->
    <div class="absolute top-6 right-6 z-10">
      <div class="flex gap-3 bg-gradient-to-br from-[#1C2513]/90 to-[#1C2513]/80 p-2 rounded-full border border-[#2A2D24]/30 backdrop-blur-sm">
        <a href={pathname} class="px-3 py-1 rounded-full text-sm font-medium transition-colors bg-[#00CE31]/20 text-white border border-[#00CE31]/30">
          EN
        </a>
        <a href={dePath} class="px-3 py-1 rounded-full text-sm font-medium transition-colors text-gray-400 hover:text-white">
          DE
        </a>
      </div>
    </div>
    
    <section class="py-12 sm:py-16 lg:py-20">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
            TasteBuddy Blog
          </h1>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Discover cooking tips, recipe organization strategies, and the latest updates from our team
          </p>
        </div>
        
        <div class="grid gap-8">
          {sortedPosts.map((post) => (
            <article class="bg-gradient-to-br from-[#1C2513]/90 to-[#1C2513]/80 rounded-2xl overflow-hidden border border-[#2A2D24]/30 backdrop-blur-sm hover:border-[#2A2D24]/50 transition-all duration-300 hover:shadow-lg hover:shadow-[#00CE31]/10">
              <a href={post.url} class="block">
                {post.frontmatter.image && (
                  <div class="relative h-64 overflow-hidden">
                    <img 
                      src={post.frontmatter.image} 
                      alt={post.frontmatter.title}
                      class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                    />
                  </div>
                )}
                <div class="p-6 sm:p-8">
                  <h2 class="text-2xl sm:text-3xl font-bold text-white mb-3 hover:text-[#00CE31] transition-colors">
                    {post.frontmatter.title}
                  </h2>
                  <div class="flex items-center text-gray-400 text-sm mb-4">
                    <span class="inline-block">
                      {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                    {post.frontmatter.author && (
                      <>
                        <span class="mx-2">‚Ä¢</span>
                        <span>{post.frontmatter.author}</span>
                      </>
                    )}
                  </div>
                  <p class="text-gray-300 mb-4 line-clamp-3">
                    {post.frontmatter.description || post.frontmatter.excerpt}
                  </p>
                  <div class="flex items-center text-[#00CE31] font-medium hover:text-[#00CE31]/80 transition-colors">
                    Read more
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        {sortedPosts.length === 0 && (
          <div class="text-center py-12 bg-gradient-to-br from-[#1C2513]/90 to-[#1C2513]/80 rounded-2xl p-8 backdrop-blur-sm border border-[#2A2D24]/30">
            <div class="text-4xl mb-4">üìù</div>
            <h2 class="text-2xl font-semibold text-white mb-2">No Posts Yet</h2>
            <p class="text-gray-400 text-lg">We're working on some great content. Check back soon!</p>
          </div>
        )}
      </div>
    </section>
  </Main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 