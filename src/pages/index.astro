---
import { Image } from "astro:assets";
import BetaForm from "../components/BetaForm.astro";
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import H1 from "../components/H1.astro";
import { AstroSeo } from '@astrolib/seo';
---
<AstroSeo
  title="Recipe Organizer & Meal Planner"
  description="Organize, create and manage your recipes with TasteBuddy, the ultimate cooking companion app. Features hands-free cooking mode, step-by-step guidance, and intuitive recipe management. Available on iOS."
  openGraph={{
    title: 'TasteBuddy - Smart Recipe Organization App',
    description: 'Transform your cooking experience with TasteBuddy. Organize recipes, get step-by-step guidance, and enjoy hands-free cooking mode. Download now on iOS.',
    images: [{ url: '/images/screenshots.png' }],
  }}
/>

<Layout title="Recipe Organizer & Meal Planner">
  <Main>
    <main class="container mx-auto px-4">
      <div class="recipe-app-description">
        <h2 class="text-3xl font-bold text-[#ECECE6] mb-6 text-center">
          Your Digital Recipe Assistant
        </h2>
        <div class="space-y-4 text-[#ECECE6] text-lg">
          <p class="text-center">Transform your cooking experience with features designed to:</p>
          <ul class="list-none space-y-3">
            <li class="text-center">Instantly save recipes from any website or photo</li>
            <li class="text-center">Automatically categorize recipes by dietary needs</li>
            <li class="text-center">Generate shopping lists based on meal plans</li>
            <li class="text-center">Access your collection from any device</li>
          </ul>
        </div>
      </div>

      <div class="flex justify-center mb-16 space-x-4">
        <a 
          href="https://apps.apple.com/app/id6554007741"
          aria-label="Download TasteBuddy on the App Store"
          class="app-store-link"
        >
          <img
            src="images/Download_on_the_App_Store_Badge_US-UK_RGB_blk_092917.svg"
            alt="Download TasteBuddy on the App Store"
            class="h-16 w-auto hover:scale-105 transition-transform duration-300"
          />
        </a>
        <a 
          href="https://play.google.com/store/apps/details?id=app.tastebuddy"
          aria-label="Download TasteBuddy on Google Play"
          class="app-store-link"
        >
          <img
            src="images/Google_Play_Badge.png"
            alt="Download TasteBuddy on Google Play"
            class="h-16 w-auto hover:scale-105 transition-transform duration-300"
          />
        </a>
      </div>

      <div class="screenshots-grid">
        <Image
          src="/images/01_EN@1x.png"
          alt="TasteBuddy App Screenshot - Recipe List View"
          width={320}
          height={640}
          format="png"
          class="app-screenshot"
        />
        <Image
          src="/images/02_EN@1x.png"
          alt="TasteBuddy App Screenshot - Recipe Detail View"
          width={320}
          height={640}
          format="png"
          class="app-screenshot"
        />
        <Image
          src="/images/03_EN@1x.png"
          alt="TasteBuddy App Screenshot - Recipe Steps View"
          width={320}
          height={640}
          format="png"
          class="app-screenshot"
        />
        <Image
          src="/images/04_EN@1x.png"
          alt="TasteBuddy App Screenshot - Recipe Timer View"
          width={320}
          height={640}
          format="png"
          class="app-screenshot"
        />
      </div>
    </main>
  </Main>
</Layout>

<style>
  .recipe-app-description ul {
    list-style-type: none;
    padding-left: 0;
    text-align: left;
  }
  
  .recipe-app-description ul li {
    margin-bottom: 0.5rem;
  }

  .features-heading {
    margin-top: 1rem;
    display: block;
  }
  
  .app-screenshots {
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .screenshots-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    max-width: 700px;
    margin: 0 auto;
  }
  .app-screenshot {
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
</style>
