---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
---

<Layout title="404 - Page Not Found">
  <Main>
    <div class="max-w-3xl mx-auto text-center py-20 px-4">
      <h1 class="text-4xl font-bold text-white mb-6">404 - Page Not Found</h1>
      <p class="text-xl text-gray-300 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      <!-- Debug info that might help diagnose the issue -->
      <div class="bg-gradient-to-br from-[#1C2513]/90 to-[#1C2513]/80 p-6 rounded-xl border border-[#2A2D24]/30 text-left mb-8">
        <h2 class="text-xl font-semibold text-white mb-4">Request Information</h2>
        <pre class="text-gray-300 text-sm overflow-auto">
Path: {Astro.url.pathname}
Query: {JSON.stringify(Object.fromEntries(Astro.url.searchParams.entries()))}
        </pre>
      </div>
      
      <a href="/" class="inline-block bg-[#00CE31]/20 text-white border border-[#00CE31]/30 px-6 py-3 rounded-lg text-lg font-medium hover:bg-[#00CE31]/30 transition-colors">
        Go back home
      </a>
    </div>
  </Main>
</Layout> 