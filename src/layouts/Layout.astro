---
import Header from "../components/Header.astro"

interface Props {
	title: string;
	description?: string;
	
}

const { title, description = "Discover the Chef in You with TasteBuddy", } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta property="og:description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
    <body class="min-h-screen grid grid-rows-[auto,1fr,auto] bg-black">
        <Header />
        <slot />
    </body>
</html>